@import 'nib'

*, *:before, *:after
    box-sizing border-box

body
    background-color: #fafafa
    font-family Roboto, Helvetica, sans-serif

div.container
    absolute top 50% left 50%
    transform translateX(-50%) translateY(-50%)
    width 400px

.color-name
    text-transform capitalize

h1
    font-size 22px
    font-weight normal
    font-family Roboto, Helvetica, sans-serif
    text-align: center

.input-wrapper
    display block
    width 100%
    height 34px
    border 2px solid #9e9e9e
    border-radius 10px
    background-color: #fff

    > input
        font-size 15px
        padding 7px 12px
        background none
        border none

.dropdown
    margin: -3px 0 0
    ol, ul
        margin: 0
        padding: 0
        list-style: none
        background-color: #fff
        border 1px solid #9e9e9e
        border-top none
        box-shadow 0 3px 5px #0004
        font-size: 14px

    li
        padding 5px 3px

        &.selected
            background-color #e1f5fe

        .sample
            size 15px
            border 1px solid #9e9e9e
            border-radius 50%
            margin: 0 7px
            display: inline-block
            vertical-align: middle

        span
            vertical-align: -1px